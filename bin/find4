#!/bin/bash
# Finds all files with a given file extension in and below the current directory
# that contain a given string, but doesn't search under node_modules directories.
# For example, find4 js "console\.log"

if [ $# -ne 2 ]; then
  echo usage: find4 {file-extension} {search-string}
  exit 1
fi

find . -not \( -name node_modules -prune \) -name "*.$1" | xargs grep "$2"
